<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".StudyScheduleActivity"
    android:background="@drawable/reg2">

    <EditText
        android:id="@+id/editText_study_hours"
        android:layout_width="383dp"
        android:layout_height="58dp"
        android:hint="Enter total study hours"
        android:inputType="number"
        android:background="@drawable/tv_rcorner"/>

    <Button
        android:id="@+id/btn_allocate_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Allocate Time"
        android:backgroundTint="@color/k_blackish"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btn_save_schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Schedule"
        android:backgroundTint="@color/k_blackish"/>

</LinearLayout>